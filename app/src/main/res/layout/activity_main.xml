<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.udacity.windy.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="My Nanodegree Apps!"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/spotify_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="32dp"
        android:background="#F08C35"
        android:text="Spotify Streamer"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/scores_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="8dp"
        android:background="#F08C35"
        android:text="Football Scores App"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/library_btn"
        android:background="#F08C35"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="8dp"
        android:text="Library App"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/build_btn"
        android:background="#F08C35"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="8dp"
        android:text="Build it bigger"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/reader_btn"
        android:background="#F08C35"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="8dp"
        android:text="XYZ Reader"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/capstone_btn"
        android:textColor="#FFFFFF"
        android:background="@android:color/holo_red_dark"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="8dp"
        android:text="Capstone:My Own app"
        android:textAllCaps="true" />
</LinearLayout>
